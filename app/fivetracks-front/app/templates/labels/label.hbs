<div class='id-label'>
	Label
</div>
<div class="row">
	<div class="col-md-8">
		<h1>{{model.label.name}}</h1>
		{{#if model.artists}}
			{{labels/label-artists artists=model.artists 
				page=artistsPage size=artistsSize
				paginate=(action "paginate")}}
		{{else}}
			No artists
		{{/if}}
		
		{{#if model.releases}}
			{{labels/label-releases releases=model.releases 
				page=releasesPage size=releasesSize
				paginate=(action "paginate")}}
		{{else}}
			No releases
		{{/if}}
	</div>
	
	
	
	<div class="col-md-4 pull-right">
		<div class='label-details'>
			<ul class='list-inline'>
				<li class='list-inline-item'>Contact:</li>
				<li class='list-inline-item'>{{model.label.contactInfo}}</li>
			</ul>
			<ul class='list-inline'>
				<li class='list-inline-item'>Profile:</li>
				<li class='list-inline-item'>{{model.label.profile}}</li>
			</ul>
		</div>

		{{#if model.label.parent}}
			Parent Label: 
			{{#link-to 'labels.label' model.label.parent.id}}{{model.label.parent.name}}{{/link-to}}
		{{/if}}

		{{#if model.label.sublabels}}
			{{labels/label-sublabels sublabels=model.label.sublabels}}	
		{{/if}}
	</div>
</div>